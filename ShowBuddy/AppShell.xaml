<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShowBuddy.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShowBuddy"
    Shell.FlyoutBehavior="Disabled"
    Title="ShowBuddy">

    <TabBar>
      <Tab Title="Home" Icon="home.png">
        <ShellContent
            Title="My Shows"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
      </Tab>
      <Tab Title="Search" Icon="search.png">
        <ShellContent
            Title="Search"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
      </Tab>
      <Tab Title="Matcher" Icon="match.png">
        <ShellContent
            Title="Matcher"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
      </Tab>
      <Tab Title="Settings" Icon="settings.png">
        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
      </Tab>
    </TabBar>

</Shell>
